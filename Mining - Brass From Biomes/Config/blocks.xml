<configs>
<insertAfter xpath="(//block[starts-with(@name, 'terr')])[last()]">
	<block name="terrOreBrass">
		<property name="Material" value="MoreMetal"/>
		<property name="Tags" value="ore"/>
		<property name="Shape" value="Terrain"/>
		<property name="Mesh" value="terrain"/>
		<property name="Texture" value="8"/>
		<property name="ImposterExclude" value="true"/>
		<drop event="Harvest" name="resourceScrapBrass" count="15" tag="oreWoodHarvest"/>
		<drop event="Destroy" count="0"/>
		<drop event="Fall" name="resourceScrapBrass" count="150" prob="0.4" stick_chance="0"/>
		<property name="CanMobsSpawnOn" value="true"/>
		<property name="FilterTags" value="fterrain"/>
		<property name="SortOrder1" value="d0l0"/>
		<property name="SortOrder2" value="0050"/>
		<property name="DisplayType" value="blockTerrain"/>
		<drop event="Harvest" name="resourceScrapBrass" prob=".050" count="1" tag="artOfMiningLuckyStrikeHarvest"/>
		<property name="DescriptionKey" value="terrainBlockGroupDesc"/>
	</block>
	
	<!-- Uncomment this to see the brass ore when flying underground. Will cause 1 line red text. -->
